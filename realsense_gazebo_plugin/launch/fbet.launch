<launch>
	<!-- <node pkg = "tf" type = "static_transform_publisher" name="camera_transform_publisher" args = "0.245 0 0.03 -0.5 0.5 -0.5 0.5 quadrotor camera 50"/> -->

	<!-- <node pkg = "tf" type = "static_transform_publisher" name="depth_transform_publisher" args = "0 -0.046 0.004 0 0 0 camera depth 50"/> -->

	<!-- <node pkg = "tf" type = "static_transform_publisher" name="map_odom_transform_publisher" args = "0 0 0 0 0 0 map odom 50"/> -->

	<node name="fbet_node" pkg="fbet" type="fbet_node" output="screen">
		<remap from="/cloud_in" to="/cloud"/>
		<!-- <remap from="/cloud_in" to="/depth_registered/points"/> -->
		<param name="resolution" type="double" value="0.2"/>
		<param name="base_frame_id" type="string" value="quadrotor"/>
		<!-- <param name="sensor_model/max_range" type="double" value="4.0"/> -->
		<param name="pointcloud_min_z" type="double" value="0"/>
		<param name="pointcloud_max_z" type="double" value="1.0"/>
		<param name="filter_speckles" type="bool" value="true"/>
		<param name="cluster_cost" type="double" value="25.0"/>
		<param name="distance_cost" type="double" value="5.0"/>
		<param name="goal_tolerance" type="double" value="0.5"/>
	</node>
	
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find realsense_gazebo_plugin)/rviz/keyboard_mapping.rviz" required="true" output="screen"/>
</launch>
